<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.schoolvote.schoolvote">

    <uses-feature android:name="android.hardware.fingerprint" android:required="true" />
    <uses-permission android:name="android.permission.USE_FINGERPRINT" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".VotePieChartActivity"
            android:label="@string/graph"
             />
        <activity android:name=".MeetingManageActivity"
            android:label="@string/mh"
              />
        <activity android:name=".MeetingScheduleActivity"
            android:label="@string/jmt"
              />
        <activity android:name=".MeetingGeneratingActivity"
            android:label="@string/gho"
              />
        <activity android:name=".TalkActivity"
            android:label="@string/talk"
              />
        <activity android:name=".FeedbackActivity"
            android:label="@string/feed"
              />
        <activity android:name=".ReauthenticatingActivity"
            android:label="@string/ci"
              />

        <activity android:name=".VoteManageActivity"
            android:label="@string/managevote"
              />
        <activity android:name=".VoteScheduleActivity"
            android:label="@string/schedule"
              />
        <activity android:name=".VoteGeneratingActivity"
            android:label="@string/makevote"
              />
        <activity android:name=".AccountInfoActivity"
            android:label="@string/acc"
              />
        <activity android:name=".MainMenuActivity"
            android:label="@string/app_name"
              />
        <activity android:name=".VoteAlertDialogActivity"
            android:theme="@style/LogoTitle" />
        <activity android:name=".RegisterActivity"
            android:label="@string/register"
              />
        <activity android:name=".LoginActivity"
            android:label="@string/login"
              >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"
            android:theme="@style/LogoTitle">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>
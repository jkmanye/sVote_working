<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VoteGeneratingActivity"
    android:background="@color/colorWhite" >

    <ImageView
        android:layout_width="172dp"
        android:layout_height="108dp"
        android:layout_marginTop="400dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/svotelogo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="96dp"
        android:layout_height="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/title"
        android:fontFamily="@font/bmjua" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="96dp"
        android:layout_height="32dp"
        android:layout_marginTop="64dp"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/subtitle"
        android:fontFamily="@font/bmjua" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="96dp"
        android:layout_height="32dp"
        android:layout_marginTop="64dp"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/lists"
        android:fontFamily="@font/bmjua" />

    <EditText
        android:id="@+id/title_vg"
        android:layout_width="96dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/bmjua" />

    <EditText
        android:id="@+id/subtitle_vg"
        android:layout_width="240dp"
        android:layout_height="48dp"
        android:layout_marginTop="48dp"
        android:layout_marginRight="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toBottomOf="@id/title_vg"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/bmjua" />

    <Button
        android:id="@+id/pushbtn_vg"
        android:layout_width="64dp"
        android:layout_height="32dp"
        android:layout_marginTop="64dp"
        android:layout_marginRight="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toBottomOf="@id/subtitle_vg"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/push"
        android:textSize="11dp"
        android:onClick="addlist"
        android:fontFamily="@font/bmjua" />

    <EditText
        android:id="@+id/push_vg"
        android:layout_width="96dp"
        android:layout_height="48dp"
        android:layout_marginTop="56dp"
        android:layout_marginRight="2dp"
        android:layout_marginEnd="2dp"
        app:layout_constraintTop_toBottomOf="@id/subtitle_vg"
        app:layout_constraintRight_toLeftOf="@id/pushbtn_vg"
        app:layout_constraintEnd_toStartOf="@id/pushbtn_vg"
        android:fontFamily="@font/bmjua" />


    <Button
        android:background="@color/colorPrimary"
        android:textColor="@color/colorWhite"
        android:id="@+id/button_vg"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="128dp"
        android:layout_marginRight="64dp"
        android:layout_marginEnd="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/push"
        android:onClick="onClick"
        android:fontFamily="@font/bmjua" />

    <Button
        android:id="@+id/goback_vg"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:layout_marginLeft="64dp"
        android:layout_marginStart="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/goback"
        android:onClick="menu"
        android:fontFamily="@font/bmjua" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="64dp"
        android:layout_height="32dp"
        android:layout_marginTop="64dp"
        android:layout_marginRight="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toBottomOf="@id/pushbtn_vg"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/classroom"
        android:fontFamily="@font/bmjua" />

    <EditText
        android:id="@+id/clroom_vg"
        android:layout_width="32dp"
        android:layout_height="48dp"
        android:layout_marginTop="48dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/pushbtn_vg"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/bmjua" />
    <TextView
        android:id="@+id/textView5"
        android:layout_width="64dp"
        android:layout_height="32dp"
        android:layout_marginTop="64dp"
        android:layout_marginRight="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toBottomOf="@id/pushbtn_vg"
        app:layout_constraintRight_toRightOf="@id/grade_vg"
        app:layout_constraintEnd_toEndOf="@id/grade_vg"
        android:text="@string/grade"
        android:fontFamily="@font/bmjua" />

    <EditText
        android:id="@+id/grade_vg"
        android:layout_width="32dp"
        android:layout_height="48dp"
        android:layout_marginTop="48dp"
        android:layout_marginRight="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toBottomOf="@id/pushbtn_vg"
        app:layout_constraintRight_toLeftOf="@id/textView4"
        app:layout_constraintEnd_toStartOf="@id/textView4"
        android:fontFamily="@font/bmjua" />

    <TextView
        android:layout_width="96dp"
        android:layout_height="32dp"
        android:layout_marginTop="64dp"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        app:layout_constraintTop_toBottomOf="@id/textView3"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/forsomeone"
        android:fontFamily="@font/bmjua" />

</androidx.constraintlayout.widget.ConstraintLayout>